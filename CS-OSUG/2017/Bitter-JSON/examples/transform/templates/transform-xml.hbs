<?xml version="1.0" encoding="UTF-8"?>
<cities>
    {{#each cities}}
      <city>
        <id>{{id}}</id>
        <name>{{name}}</name>
        <weather>
          {{#main}}
            <currentTemp>{{temp}}</currentTemp>
            <lowTemp>{{temp_min}}</lowTemp>
            <hiTemp>{{temp_max}}</hiTemp>
            <humidity>{{humidity}}</humidity>
          {{/main}}
          <windSpeed>{{wind.speed}}</windSpeed>
          {{#each weather}}
            <summary>{{main}}</summary>
            <description>{{description}}</description>
          {{/each}}
        </weather>
      </city>
    {{/each}}
</cities>