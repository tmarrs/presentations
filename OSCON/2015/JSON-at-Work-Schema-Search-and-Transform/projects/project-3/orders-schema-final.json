{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "orders": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "orderId": {
            "type": "integer"
          },
          "customerName": {
            "type": "string"
          },
          "drink": {
            "type": "object",
            "properties": {
              "drinkType": {
                "type": "string",
                "enum": ["Latte", "Espresso", "Cappuccino",
                  "Chai", "Tea", "Steamer", "Hot Chocolate"
                ]
              },
              "size": {
                "type": "string",
                "enum": ["Small", "Medium", "Large",
                  "Extra-Large", "Bucket"
                ]
              },
              "milk": {
                "type": "string",
                "enum": ["Non-Fat", "Whole", "Breve", "Soy", "Almond"]
              },
              "flavor": {
                "type": "string",
                "enum": ["Carmel", "Chocolate", "Hazelnut",
                  "Vanilla", "Peppermint", "White Chocolate"
                ]
              }
            }
          },
          "muffin": {
            "type": "string",
            "enum": ["Blueberry", "Double Berry Crumb", "Carrot Cake",
              "Chocolate Chip", "Double Chocolate Chip",
              "Cherry Cheesecake", "Cinnamon Cheesecake",
              "Chocolate Cheesecake", "Banana Nut"
            ]
          },
          "date": {
            "type": "string",
            "pattern": "^([0][1-9]|[1][0-2])-([0][0-9]|[1][0-9]|[2][0-9]|[3][0-1])-20\\d{2}$"
          },
          "time": {
            "type": "string",
            "pattern": "^([0-2][0-3]|[0-1][0-9])(:[0-5][0-9]){2}$"
          },
          "espressoConCard": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{8}-([A-Fa-f0-9]{4}-){3}[A-Fa-f0-9]{12}$"
          },
          "totalPrice": {
            "type": "string",
            "pattern": "^\\$[0-9]{1,3}.[0-9]{2}$"
          }
        },
        "required": [
          "id",
          "orderId",
          "customerName",
          "drink",
          "muffin",
          "date",
          "time",
          "espressoConCard",
          "totalPrice"
        ]
      },
      "additionalItems": false
    }
  },
  "required": [
    "orders"
  ]
}
